<h1>Listing order_lists</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Order</th>
      <th>Num ordered</th>
      <th>Price</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @order_lists.each do |order_list| %>
      <tr>
        <td><%= order_list.product_id %></td>
        <td><%= order_list.order_id %></td>
        <td><%= order_list.num_ordered %></td>
        <td><%= order_list.price %></td>
        <td><%= link_to 'Show', order_list %></td>
        <td><%= link_to 'Edit', edit_order_list_path(order_list) %></td>
        <td><%= link_to 'Destroy', order_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

